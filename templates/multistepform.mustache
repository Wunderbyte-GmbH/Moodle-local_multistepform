{{!
    @template local_shopping_cart/address

    This template will render the address selection/input form during checkout

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid the logged in user id

    Example context (json):
    {
        "userid": 123,
        "stepid": 456,
        "totalsteps": 3,
        "formhtml": "<div>Form HTML goes here</div>"
    }

}}

<div class="multistep-form-wrapper" data-step-id="{{stepid}}" data-total-steps="{{totalsteps}}" data-uniqueid="{{uniqueid}}">
    {{! Header (optional) }}
    {{! Step indicator (optional) }}
    <div class="step-indicator">
        {{#str}} step, local_multistepform {{/str}} <span class="current-step">{{stepid}}</span> of {{totalsteps}}
    </div>

    {{! Placeholder for dynamically loaded AJAX form }}
    <div class="multistep-form-container multistep_form" data-region="multistepformcontainer">
        {{#formhtml}}
            {{{formhtml}}}
        {{/formhtml}}
        {{^formhtml}}
            <div class="loading">Loading form...</div>
        {{/formhtml}}
    </div>

    {{! Navigation buttons }}
    <div class="multistep-form-nav mt-3">
        <button class="btn btn-secondary" data-step='previous'>{{#str}} previous {{/str}}</button>
        <button class="btn btn-primary" data-step='next'>{{#str}} next {{/str}}</button>
        <button class="btn btn-success submit-form d-none">{{#str}} submit {{/str}}</button>
    </div>
</div>

{{#js}}
    require(['local_multistepform/formsteps'], function(fn) {
        fn.init('{{uniqueid}}', {{stepid}}, '{{{formclass}}}', '{{{formdata}}}');
    });
{{/js}}